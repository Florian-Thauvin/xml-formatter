{
	"name": "xml-formatter",
	"version": "0.1.0",
	"author": {
		"name": "Florian Thauvin",
		"email": "florian.thauvin@orange.fr"
	},
	"description": "this is a custom formatter xml",
	"license": "MIT",
	"repository": {
		"type":"github",
		"url":"https://github.com/Florian-Thauvin/xml-formatter"
	},
	"type": "module",
	"private": false,
	"scripts": {
		"build": "tsc",
		"test": "jest --silent",
		"prettier": "npx prettier --write .",
		"duplication": "npx jscpd ./src -c ./jscpd.json",
		"complexity": "npx cognitive-complexity-ts-json ./src > complexity.json",
		"complexity:ui": "npx cognitive-complexity-ts ./src",
		"lint": "tslint --project tsconfig.json --format codeFrame"
	},
	"jest": {
		"verbose": true,
		"bail": false,
		"coverageDirectory": "<rootDir>/testResults/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.{js,ts}"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text-summary",
			"clover"
		],
		"coverageThreshold": {
			"global": {
				"statements": 30,
				"branches": 30,
				"lines": 30,
				"functions": 30
			}
		},
		"errorOnDeprecated": true,
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"reporters": [
			"default",
			[
				"jest-html-reporters",
				{
					"publicPath": "./testResults/reports",
					"filename": "report.html",
					"expand": true
				}
			]
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"node"
		]
	},
	"devDependencies": {
		"cognitive-complexity-ts": "^0.1.6",
		"jest": "^26.6.3",
		"jest-html-reporters": "^2.1.0",
		"jscpd": "^3.3.22",
		"jscpd-html-reporter": "^2.0.1",
		"ts-jest": "26.4.4",
	    "tslint": "^6.1.1",
		"typescript": "^4.1.0-beta"
	}
}
